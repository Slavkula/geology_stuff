Sub CopyPictureToAllSheets()
    Dim ws As Worksheet
    Dim pic As Shape
    Set pic = Selection.ShapeRange.Item(1)
    For Each ws In ActiveWorkbook.Worksheets
        ws.Activate
        pic.CopyPicture Appearance:=xlScreen, Format:=xlPicture
        Range("F40").Select
        ActiveSheet.Paste
    Next ws
End Sub
